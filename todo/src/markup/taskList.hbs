{{#if tasks}}
{{#each tasks}}
        <li data-id={{this.id}} class="todo-element todo-element--{{this.done}}">

    {{#if this.title}}
          <h2 class="h2">{{this.title}}</h2>
    {{else}}
          <h2 class="h2">Title</h2>
    {{/if}}

    {{#if this.text}}
          <p class="description">{{this.text}}</p>
    {{else}}
          <p class="description">What you whant todo?</p>
    {{/if}}

          <div class="buttons"> 
            <button type="button" class="done" data-action="done">Done</button>

            <button type="button" class="delete" data-action="delete">Delete</button>
          </div>
        </li>
{{/each}}
{{else}}
<li class="noTasks">you don`t have any ToDos</li>
{{/if}}